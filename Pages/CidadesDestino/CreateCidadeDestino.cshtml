@page
@model AgenTurismo.Pages.CidadesDestino.CreateCidadeDestinoModel
@{
    ViewData["Title"] = "Cadastrar Destino";
}

<h1>Cadastrar Nova Cidade Destino</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Nome" class="control-label"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Pais" class="control-label"></label>
                <input asp-for="Input.Pais" class="form-control" />
                <span asp-validation-for="Input.Pais" class="text-danger"></span>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3" id="success-message">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        setTimeout(function() {
            var successMessage = document.getElementById('success-message');
            if (successMessage) {
                successMessage.remove();
            }
        }, 5000);
    </script>
}